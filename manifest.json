{
  "manifest_version": 3,
  "name": "GitHub Pages Image Uploader",
  "version": "1.0",
  "description": "Resize images locally and push them to your GitHub Pages repo.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://api.github.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  }
}